{
    "manifest_version": 3,
    "name": "AI Summarizer",
    "version": "1.0",
    "description": "Summarize web pages with AI",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
